{
    "extends": "./tsconfig.base.json",
    "include": [
        "./src/**/*",
        "node_modules/@types",
        "./fakeServer/**/*",
        "./fakeShared/**/*",
        "./fakeSocket/**/*",
        "WIP/CustomizableList",
    ],
    "exclude": [
        // "./generated/**/*",
        "node_modules/@types/node",
    ],
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "types": [
            "@lesnoypudge/types-global-base",
            "@lesnoypudge/types-global-web",
            "@lesnoypudge/types-global-react",
            "./src/root/declarations/global.d.ts",
            "./src/root/declarations/vite-env.d.ts",
            "./generated/assetNames.d.ts",
            "./generated/spriteNames.d.ts",
            "./src/i18n/i18n.d.ts",
        ],
        "paths": {
            "@vars": [
                "./src/vars"
            ],
            "@utils": [
                "./src/utils"
            ],
            "@generated/*": [
                "./generated/*"
            ],
            "@i18n": [
                "./src/i18n"
            ],
            "@root/*": [
                "./src/root/*"
            ],
            "@components": [
                "./src/components"
            ],
            "@screens/bundled": [
                "./src/screens/bundled"
            ],
            "@screens/lazy": [
                "./src/screens/lazy"
            ],
            "@screens/lazy/*": [
                "./src/screens/lazy/*"
            ],
            "@types": [
                "./src/types"
            ],
            "@hooks": [
                "./src/hooks"
            ],
            "@fakeServer": [
                "./fakeServer"
            ],
            "@fakeShared": [
                "./fakeShared"
            ],
            "@fakeSocket": [
                "./fakeSocket"
            ],
            "@redux/features": [
                "./src/redux/features"
            ],
            "@redux/store": [
                "./src/redux/store"
            ],
            "@redux/hooks": [
                "./src/redux/hooks"
            ],
            "@redux/utils": [
                "./src/redux/utils"
            ],
            "@redux/actions": [
                "./src/redux/actions"
            ],
            "@layouts/lazy": [
                "./src/layouts/lazy"
            ],
            "@layouts/bundled": [
                "./src/layouts/bundled"
            ],
            "@panels": [
                "./src/panels"
            ],
            "@modals": [
                "./src/modals"
            ],
            "@contextMenus": [
                "./src/contextMenus"
            ],
            "_@lesnoypudge/utils-react": [
                "../@lesnoypudge-utils-react/build"
            ],
            // "_@lesnoypudge/utils-react": [
            //     "./src/TMP_EXPORTS/reactUtils.ts"
            // ],
            "_@lesnoypudge/utils": [
                "../@lesnoypudge-utils/build"
            ],
            "_@lesnoypudge/utils-web": [
                "../@lesnoypudge/utils-web/build"
            ],
            "@features": [
                "./src/features"
            ]
        },
        "jsx": "react-jsx",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
    }
}