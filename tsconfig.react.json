{
    "extends": "./tsconfig.base.json",
    "include": [
        "./src/**/*",
        "node_modules/@types",
        "./fakeServer/**/*",
        "./fakeShared/**/*",
        "./fakeSocket/**/*",
        "./WIP/**/*",
        "./OLD/**/*",
    ],
    "exclude": [
        // "./generated/**/*",
        "node_modules/@types/node",
    ],
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "types": [
            "@lesnoypudge/types-global-base",
            "@lesnoypudge/types-global-web",
            "@lesnoypudge/types-global-react",
            "./src/declarations/global.d.ts",
            "./src/declarations/vite-env.d.ts",
        ],
        "paths": {
            // "@/src/*": [
            //     "./src/*"
            // ],
            "@/playground": [
                "./src/playground",
            ],
            "@/router": [
                "./src/router",
            ],
            "@/router/screens/bundled": [
                "./src/router/screens/bundled"
            ],
            "@/router/screens/lazy": [
                "./src/router/screens/lazy"
            ],
            "@/router/screens/lazy/*": [
                "./src/router/screens/lazy/*"
            ],
            "@/router/panels": [
                "./src/router/panels"
            ],
            "@/router/layouts/lazy": [
                "./src/router/layouts/lazy"
            ],
            "@/router/layouts/bundled": [
                "./src/router/layouts/bundled"
            ],
            "@/setup": [
                "./src/setup",
            ],
            "@/styles/*": [
                "./src/styles/*",
            ],
            "@/vars": [
                "./src/vars"
            ],
            "@/utils": [
                "./src/utils"
            ],
            "@/generated/*": [
                "./generated/*"
            ],
            "@/root": [
                "./src/root"
            ],
            "@/root/components": [
                "./src/root/components"
            ],
            "@/components": [
                "./src/components"
            ],
            "@/types": [
                "./src/types"
            ],
            "@/hooks": [
                "./src/hooks"
            ],
            "@/fakeServer": [
                "./fakeServer"
            ],
            "@/fakeShared": [
                "./fakeShared"
            ],
            "@/fakeSocket": [
                "./fakeSocket"
            ],
            "@/redux/features": [
                "./src/redux/features"
            ],
            "@/redux/store": [
                "./src/redux/store"
            ],
            "@/redux/hooks": [
                "./src/redux/hooks"
            ],
            "@/redux/utils": [
                "./src/redux/utils"
            ],
            "@/redux/actions": [
                "./src/redux/actions"
            ],
            "_@lesnoypudge/utils-react": [
                "../@lesnoypudge-utils-react/build"
            ],
            "_@lesnoypudge/utils": [
                "../@lesnoypudge-utils/build"
            ],
            "_@lesnoypudge/utils-web": [
                "../@lesnoypudge/utils-web/build"
            ],
            "@/features": [
                "./src/features"
            ]
        },
        "jsx": "preserve",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
    }
}