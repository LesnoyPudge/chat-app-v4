{
    "extends": "./tsconfig.base.json",
    "include": [
        "**/*",
        "node_modules/@types"
    ],
    "exclude": [
        "**/generated.*"
    ],
    "compilerOptions": {
        "jsx": "react-jsx",
        "types": [
            "@lesnoypudge/types-global-base",
            "@lesnoypudge/types-global-node",
            "../shared/shared.d.ts",
            "./src/i18n/i18n.d.ts",
        ],
        "paths": {
            "@utils": [
                "./src/utils"
            ],
            "@constants": [
                "./src/constants"
            ],
            "@i18n": [
                "./src/i18n"
            ],
            "@types": [
                "./src/types"
            ],
        },
    }
}