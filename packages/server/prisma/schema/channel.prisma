enum ChannelType {
    TEXT
    VOICE
}

model Channel {
    id            String      @id @default(uuid())
    name          String
    type          ChannelType
    isPrivate     Boolean
    serverId      String
    server        Server      @relation(fields: [serverId], references: [id])
    messages      Message[]
    roleWhitelist Role[]
    createdAt     DateTime    @default(now())
    updatedAt     DateTime    @updatedAt
}
