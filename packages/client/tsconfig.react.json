{
    "extends": "./tsconfig.base.json",
    "include": [
        "src/**/*",
        "node_modules/@types"
    ],
    "exclude": [
        "./src/generated/**/*"
    ],
    "compilerOptions": {
        "types": [
            "@lesnoypudge/types-global-base",
            "@lesnoypudge/types-global-web",
            "@lesnoypudge/types-global-react",
            "../shared/shared.d.ts",
            "./src/declarations/global.d.ts",
            "./src/declarations/vite-env.d.ts",
            "./src/generated/assetNames.d.ts",
            "./src/generated/spriteNames.d.ts",
            "./src/i18n/i18n.d.ts",
        ],
        "paths": {
            "@vars": [
                "./src/vars"
            ],
            "@utils": [
                "./src/utils"
            ],
            "@generated/*": [
                "./src/generated/*"
            ],
            "@i18n": [
                "./src/i18n"
            ]
        },
        "jsx": "react-jsx",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": false,
    }
}