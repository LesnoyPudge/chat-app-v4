{
    "extends": "./tsconfig.base.json",
    "include": [
        "src/**/*",
        "node_modules/@types",
        "./fakeServer/**/*",
        "./fakeShared/**/*",
        "WIP"
    ],
    "exclude": [
        "./src/generated/**/*",
        "node_modules/@types/node",
    ],
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "types": [
            "@lesnoypudge/types-global-base",
            "@lesnoypudge/types-global-web",
            "@lesnoypudge/types-global-react",
            "../shared/shared.d.ts",
            "./src/root/declarations/global.d.ts",
            "./src/root/declarations/vite-env.d.ts",
            "./src/generated/assetNames.d.ts",
            "./src/generated/spriteNames.d.ts",
            "./src/i18n/i18n.d.ts",
        ],
        "paths": {
            "@vars": [
                "./src/vars"
            ],
            "@utils": [
                "./src/utils"
            ],
            "@generated/*": [
                "./src/generated/*"
            ],
            "@i18n": [
                "./src/i18n"
            ],
            "@root/*": [
                "./src/root/*"
            ],
            "@src/*": [
                "./src/*"
            ],
            "@components": [
                "./src/components"
            ],
            "@screens/*": [
                "./src/screens/*"
            ],
            "@types": [
                "./src/types"
            ],
            "@hooks": [
                "./src/hooks"
            ],
            "@fakeServer": [
                "./fakeServer"
            ],
            "@fakeShared": [
                "./fakeShared"
            ],
            "@redux/features": [
                "./src/redux/features"
            ],
            "@redux/store": [
                "./src/redux/store"
            ],
            "@redux/hooks": [
                "./src/redux/hooks"
            ],
            "@redux/utils": [
                "./src/redux/utils"
            ],
            "@entities": [
                "./src/entities"
            ],
            "@layouts": [
                "./src/layouts"
            ],
            "@panels": [
                "./src/panels"
            ],
            "@modals": [
                "./src/modals"
            ],
        },
        "jsx": "react-jsx",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
    }
}