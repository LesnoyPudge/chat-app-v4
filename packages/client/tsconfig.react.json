{
    "extends": "./tsconfig.base.json",
    "include": [
        "src/**/*",
        "node_modules/@types",
        "./fakeServer/**/*",
        "./fakeShared/**/*"
    ],
    "exclude": [
        "./src/generated/**/*",
        "node_modules/@types/node"
    ],
    "compilerOptions": {
        "types": [
            "@lesnoypudge/types-global-base",
            "@lesnoypudge/types-global-web",
            "@lesnoypudge/types-global-react",
            "../shared/shared.d.ts",
            "./src/root/declarations/global.d.ts",
            "./src/root/declarations/vite-env.d.ts",
            "./src/generated/assetNames.d.ts",
            "./src/generated/spriteNames.d.ts",
            "./src/i18n/i18n.d.ts",
        ],
        "paths": {
            "@vars": [
                "./src/vars"
            ],
            "@utils": [
                "./src/utils"
            ],
            "@generated/*": [
                "./src/generated/*"
            ],
            "@i18n": [
                "./src/i18n"
            ],
            "@root/*": [
                "./src/root/*"
            ],
            "@components": [
                "./src/components"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@types": [
                "./src/types"
            ],
            "@hooks": [
                "./src/hooks"
            ],
            "@fakeServer": [
                "./fakeServer"
            ],
            "@fakeShared": [
                "./fakeShared"
            ],
        },
        "jsx": "react-jsx",
        "lib": [
            "ES2023",
            "DOM",
            "DOM.Iterable"
        ],
    }
}