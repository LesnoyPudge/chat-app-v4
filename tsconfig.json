{
    "include": [
        "./scripts/**/*",
        "node_modules/@types",
        "./env.d.ts",
    ],
    "compilerOptions": {
        "explainFiles": false,
        "baseUrl": ".",
        "paths": {},

        "types": [
            "@lesnoypudge/types-global-base",
        ],

        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "verbatimModuleSyntax": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "auto",

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,

        "noEmit": true,
        "outDir": "build",
        "sourceMap": true,
        "declaration": true,

        // "moduleResolution": "NodeNext",
        // "module": "NodeNext",

        "moduleResolution": "Bundler",
        "module": "ESNext",

        "lib": [
            "ES2022",
            // "DOM",
            // "DOM.Iterable"
        ],
    }
}